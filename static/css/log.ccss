table#log:
	width: 870px
	margin: 15px
	border-collapse: collapse

	tr:
		th,td:
			padding: 3px 6px
			border-style: solid
			border-width: 1px 0 0 1px
			border-color: #333
			&:last-child:
				border-width: 1px
			&.time:
				width: 180px
			&.user:
				min-width: 50px
			&.message:
				min-width: 250px

		&:last-child td:
			border-width: 1px

		&:nth-child(even):
			background-color: #222

#wrapper:
	padding-bottom: 1px
